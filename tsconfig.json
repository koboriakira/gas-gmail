{
  "compilerOptions": {
    "target": "ES2020", // 出力するJavaScriptのバージョンを指定
    "module": "ESNext", // モジュールシステムの指定
    "lib": [
      "esnext"
    ], // 利用するライブラリの指定
    "strict": true, // 厳格な型チェックを有効化
    "experimentalDecorators": true, // デコレータを有効化
  },
  "include": [
    "src/**/*"
  ], // コンパイル対象のファイルやディレクトリを指定
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ] // コンパイルから除外するファイルやディレクトリを指定
}
